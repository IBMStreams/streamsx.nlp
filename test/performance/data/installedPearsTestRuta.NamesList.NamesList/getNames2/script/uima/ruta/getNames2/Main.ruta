PACKAGE uima.ruta.getNames2;

//-- look for <Title> [<Firstname>] <Lastname>
WORDLIST TitleDict = 'TitleDict.txt';
DECLARE Title, DoubleCaps, TitleAndName, Name;
// find titles
Document{-> MARKFAST(Title, TitleDict)};

// Find all the cases which have two capitalized words followed by a non-capitalized word
(CW[2,2]){-> MARK(DoubleCaps)};

// Create a view combining nearby titles with two capitalized words
(Title ANY[0,3]? DoubleCaps){-> MARK(TitleAndName)};
